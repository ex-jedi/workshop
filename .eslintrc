{
  "extends": [
    "wesbos"
  ],
  "rules": {
    "no-console": 1,
    "allowTernary": 0,
    "allowShortCircuit": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "endOfLine": "auto",
        "overrides": [
          {
            "files": "*.scss",
            "options": {
              "singleQuote": true
            }
          }
        ]
      }
    ]
  }
}